<%= form_with(model: dish, html: { class: "d-flex flex-column gap-3" }) do |form| %>
  <% if dish.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
        <% dish.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :details, class: "form-label" %>
    <%= form.text_area :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :public, class: "form-check-input", type: "checkbox" %>
    <%= form.label :public, class: "form-check-label" %>
  </div>

  <div class="d-flex gap-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= link_to 'Cancel', :back, class: "btn btn-secondary" %>
  </div>
<% end %>


